<li id="comment-<%= comment._id %>" class="post-comment">
         <div class="comment-details">
            <div >
                <%= comment.username %>
            </div>
            <div>
                <% if (locals.user){ %>
                    <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
                            <%= comment.likes.length %> Likes
                    </a>
                <% }else{ %>
                    <%= comment.likes.length %> Likes
                <% } %>
            </div>
            <% if (locals.user && locals.user.id==comment.user) { %>                                        
            <div>
                <a class="delete-comment-button" href="/comments/destroy/<%= comment._id %>"><i class="fa-solid fa-trash-can"></i></a>
            </div>
            <% } %>  

        </div>
        <div class="content">    
            <%= comment.content %>
        </div>

</li>
